# Bonnie Lass Florals Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGO_URI=your-mongodb-connection-string-here

# Session Secret (generate a random string)
SESSION_SECRET=your-session-secret-here

# Client Origins (comma-separated list of allowed origins)
CLIENT_ORIGINS=https://bonnielassflorals.com

# Gemini AI API Key (required for chatbot functionality)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Backend URL for local development
# BACKEND_URL=http://localhost:5000

# Optional: Node Environment
# NODE_ENV=development
